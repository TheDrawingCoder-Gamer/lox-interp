package;

class Math {
    static fun max(a, b) {
        return if (a > b) a else b;
    }
    static fun min(a, b) {
        return if (a < b) a else b;
    }
    static fun abs(a) {
        return if (a < 0) -a else a;
    }
    static fun clamp(v, min, max) {
        return Math.min(max, Math.max(min, v));
    }
}
